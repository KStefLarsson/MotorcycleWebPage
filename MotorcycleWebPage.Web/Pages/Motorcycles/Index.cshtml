@page
@model MotorcycleWebPage.Web.Pages.Motorcycles.IndexModel
@{
}

<picture class="picture">
    <img class="imgHome" src="~/Img/Home/9.jpg" data-object-fit="cover" />
</picture>

<div>
    <a class="btn btn-primary mt-3 my-3" asp-page="/Motorcycles/New" asp-route-id="@Model.Id">Lägg till en ny motorcykel</a>

    @foreach (var bikes in Model.Motorcycles)
    {
        <div class="row">
            <div class="col-lg-12 mb-5">
                <div class="card">
                    <div class="card-header">
                        <a asp-page="/Motorcycles/View" asp-route-id="@bikes.Id">
                            <img width="300" src="/Img/Motorcycles/@(bikes.Id).jpg" />
                        </a>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <div class="form-group">
                                    <label>Modell</label>
                                    <p class="form-control">@bikes.Model</p>
                                </div>
                                <div class="form-group">
                                    <label>Tillverkare</label>
                                    <p class="form-control">@bikes.ManufactureName</p>
                                </div>
                                <div class="form-group">
                                    <label>Modell typ</label>
                                    <p class="form-control">@bikes.TypeOfModel</p>
                                </div>
                            </div>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    }
</div>