@page
@model MotorcycleWebPage.Web.Pages.Motorcycles.SportBikesModel
@{
}

<picture class="picture">
    <img class="imgHome" src="~/Img/Home/10.jpg" data-object-fit="cover" />
</picture>

<div>
    @foreach (var sport in Model.SportBikes)
    {
        <div class="row">
            <div class="col-lg-12 mb-5">
                <div class="card">
                    <div class="card-header">
                        <a asp-page="/Motorcycles/ViewBike" asp-route-id="@sport.Id">
                            <img width="300" src="/Img/Motorcycles/@(sport.Id).jpg" />
                        </a>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <div class="form-group">
                                    <label>Modell</label>
                                    <p class="form-control">@sport.Model</p>
                                </div>
                                <div class="form-group">
                                    <label>Tillverkare</label>
                                    <p class="form-control">@sport.ManufactureName</p>
                                </div>
                            </div>
                        </form>
                        <a class="btn btn-outline-primary" asp-page="/Motorcycles/ViewBike" asp-route-id="@sport.Id">View</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>