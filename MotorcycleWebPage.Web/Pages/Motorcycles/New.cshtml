@page
@model MotorcycleWebPage.Web.Pages.Motorcycles.NewModel
@{
}

<picture class="picture">
    <img class="imgHome" src="~/Img/Home/7.jpg" data-object-fit="cover" />
</picture>

<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Ny motorcykel</h3>
            </div>

            <div class="card-body">
                <form method="post">
                    <div class="form-group">
                        <label asp-for="ManufactureName">Välj typ</label>
                        <select class="form-control" asp-for="ManufactureName"
                                asp-items="@Model.AllManufacturers"></select>
                        <span asp-validation-for="ManufactureName" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Model">Modell</label>
                        <input class="form-control" asp-for="Model">
                        <span asp-validation-for="Model" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Year">Tillverkningsår</label>
                        <input asp-for="Year" class="form-control" />
                        <span asp-validation-for="Year" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="TopSpeed">Max hastighet</label>
                        <input asp-for="TopSpeed" class="form-control" />
                        <span asp-validation-for="TopSpeed" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="HorsePower">Hästkrafter</label>
                        <input asp-for="HorsePower" class="form-control" />
                        <span asp-validation-for="HorsePower" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Description">Info om motorcykel</label>
                        <textarea class="form-control" rows="6" asp-for="Description">@Model.Description</textarea>
                        <span asp-validation-for="Description" class="field-validation-error"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="TypeOfModel">Välj typ</label>
                        <select class="form-control" asp-for="TypeOfModel"
                                asp-items="@Model.AllBikeModels"></select>
                        <span asp-validation-for="TypeOfModel" class="field-validation-error"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Spara</button>
                </form>
            </div>
        </div>
    </div>
</div>