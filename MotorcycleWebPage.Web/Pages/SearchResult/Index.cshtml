@page
@model MotorcycleWebPage.Web.Pages.SearchResult.IndexModel
@{
}

<h3>Du sökte på @Model.SearchWord</h3>

<table class="table">
    <tbody>
        @foreach (var search in Model.Products)
        {
            <tr>
                <td>
                    <a asp-page="/SearchResult/ShowResult" asp-route-Id="@search.Id"
                       role="button">@search.Name</a>
                </td>
            </tr>
        }
    </tbody>
</table>