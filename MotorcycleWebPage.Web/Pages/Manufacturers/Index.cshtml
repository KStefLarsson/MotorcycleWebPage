@page
@model MotorcycleWebPage.Web.Pages.Manufacturers.IndexModel
@{
}

<picture class="picture">
    <img class="imgHome" src="~/Img/Home/9.jpg" data-object-fit="cover" />
</picture>

<div>
    <a class="btn btn-primary mt-3 my-3" asp-page="/Manufacturers/New" asp-route-id="@Model.Id">Skapa en ny tillverkare</a>

    @foreach (var manufacture in Model.Facturers)
    {
        <div class="row">
            <div class="col-lg-12 mb-5">
                <div class="card">
                    <div class="card-header">
                        <a asp-page="/Manufacturers/View" asp-route-id="@manufacture.Id">
                            <img width="300" src="/Img/Logos/@(manufacture.Id).jpg" />
                        </a>
                    </div>
                    <div class="card-body">
                        <form method="post">
                            <div class="form-group">
                                <div class="form-group">
                                    <label>Tillverkare</label>
                                    <p class="form-control">@manufacture.Name</p>
                                </div>
                                <div class="form-group">
                                    <label>Land</label>
                                    <p class="form-control">@manufacture.Country</p>
                                </div>
                            </div>
                        </form>
                        <a asp-page="/Manufacturers/View" asp-route-id="@manufacture.Id">Mer info...</a>
                    </div>
                </div>
            </div>
        </div>
    }
</div>