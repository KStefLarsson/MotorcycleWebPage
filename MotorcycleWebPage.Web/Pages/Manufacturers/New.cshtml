@page
@model MotorcycleWebPage.Web.Pages.Manufacturers.NewModel
@{
}

<div class="row">
    <div class="col-lg-12 mb-5">
        <div class="card">
            <div class="card-header">
                <h3 class="h6 text-uppercase mb-0">Ny tillverkare</h3>
            </div>

            <div class="card-body">
                <form method="post">

                    <div class="form-group">
                        <label asp-for="Name">Name</label>
                        <input class="form-control" asp-for="Name">
                        <span asp-validation-for="Name" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Country">Land</label>
                        <input asp-for="Country" class="form-control" />
                        <span asp-validation-for="Country" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Founded">Grundades</label>
                        <input asp-for="Founded" class="form-control" />
                        <span asp-validation-for="Founded" class="field-validation-error"></span>
                    </div>

                    <div class="form-group">
                        <label asp-for="Description">Info om tillverkare</label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description" class="field-validation-error"></span>
                    </div>
                    <button type="submit" class="btn btn-primary">Spara</button>
                </form>
            </div>
        </div>
    </div>
</div>