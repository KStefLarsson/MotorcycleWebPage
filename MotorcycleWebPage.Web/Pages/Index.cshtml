@page
@model IndexModel
@{
    ViewData["Title"] = "Home page";
}

<picture class="picture">
    <img class="imgHome" src="~/Img/Home/7.jpg" data-object-fit="cover" />
</picture>

<div class="categoryPicture">
    <div>
        <figure class="figure">
            <a asp-page="/Motorcycles/TouringBikes">
                <img class="figure-img" src="~/Img/Home/12.jpg" />
